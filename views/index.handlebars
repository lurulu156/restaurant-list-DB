<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
          width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
        我的餐廳清單
      </a>
      <a class="navbar-brand" href="/restaurants/new">
        <i class="fa fa-plus" aria-hidden="true"></i>
        新增餐廳
      </a>

    </div>
  </nav>

  <div class="banner"></div>
</header>

<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-md-3">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
              <span class="badge rounded-pill text-bg-danger">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>
        <a href="/restaurants/{{this._id}}/edit"
          style="width: 2.5%; height: 4%; display:inline-block; margin-left:-4%; z-index: 1;"
          class="badge rounded-circle text-bg-light mb-5">
          <i class="fa fa-pencil" aria-hidden="true"></i>
        </a>
        <form action="/restaurants/{{this._id}}/delete" method="POST"
          style="width: 2.5%; height: 10%; display:inline-block; margin-left:-2%; z-index: 1;">
          <button type="submit" class="badge rounded-circle text-bg-light mt-4 border border-white"
            style="display:inline-block;margin-left:-18px;"><i class="fa fa-trash" aria-hidden="true"></i></button>
        </form>
        {{/each}}
      </div>
    </div>
  </div>
</div>