<header>
  <div class="banner"></div>
</header>

<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <div class="d-flex align-items-center mb-3">
      <a class="navbar-brand"  style="line-height:30px; padding:0.375rem 0.75rem" href="/restaurants/{{restaurant._id}}/edit">
        <i class="fa fa-pencil" aria-hidden="true"></i>
        修改餐廳
      </a>
      <form action="/restaurants/{{restaurant._id}}?_method=DELETE" method="POST" class="form-control border border-0">
        <button type="submit" class="navbar-brand border border-light" style="background-color: #F8F9FA;"
          onclick="return confirm('確定要刪除嗎?');">
          <i class="fa fa-trash" aria-hidden="true"></i>
          刪除餐廳
        </button>
      </form>
      </div>
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>